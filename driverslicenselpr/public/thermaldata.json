{
  "parsing": false,
  "responsive": true,
  "maintainAspectRatio": false,
  "animation": false,

  "layout": {
    "padding": {
      "top": 24,
      "right": 24,
      "bottom": 16,
      "left": 16
    }
  },

  "elements": {
    "line": {
      "tension": 0,
      "borderWidth": 2
    },
    "point": {
      "radius": 1,
      "hoverRadius": 4,
      "backgroundColor": "transparent"
    }
  },

  "scales": {
    "x": {
      "type": "time",
      "time": {
        "unit": "minute",
        "stepSize": 2,
        "tooltipFormat": "hh:mm a"
      },
      "grid": { "display": false },
      "reverse": false,
      "ticks": {
        "autoSkip": true,
        "maxTicksLimit": 6,
        "font": { "size": 13, "family": "Segoe UI" }
      },
      "title": {
        "display": true,
        "text": "Time",
        "font": { "size": 14, "family": "Segoe UI", "weight": "bold" }
      }
    },
    "y": {
      "min": 90,
      "max": 170,
      "grid": { "color": "#e0e0e0" },
      "ticks": {
        "stepSize": 8,
        "maxTicksLimit": 11,
        "font": { "size": 13, "family": "Segoe UI" }
      },
      "title": {
        "display": true,
        "text": "Temperature (Â°F)",
        "font": { "size": 14, "family": "Segoe UI", "weight": "bold" }
      }
    }
  },

  "plugins": {
    "title": {
      "display": true,
      "text": "Temperature Data",
      "position": "top",
      "font": { "size": 16, "family": "Segoe UI", "weight": "bold" },
      "padding": { "top": 0, "bottom": 8 }
    },
    "legend": {
      "position": "top",
      "labels": {
        "usePointStyle": true,
        "boxWidth": 10,
        "padding": 16,
        "font": { "size": 13, "family": "Segoe UI" }
      }
    },
    "tooltip": {
      "mode": "index",
      "intersect": false,
      "titleFont": { "size": 13, "family": "Segoe UI" },
      "bodyFont": { "size": 12, "family": "Segoe UI" }
    }
  }
}
